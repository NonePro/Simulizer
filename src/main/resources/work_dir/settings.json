{
  "window": {
  	"width": 1366,
  	"height": 768
  },
  "workspace": {
    "theme": "default",
    "layout": "default.json",
    "scale-ui": {
      "enabled": true,
      "delay": 10
    },
    "grid": {
      "enabled": false,
      "horizontal": 6,
      "vertical": 3,
      "sensitivity": 30,
      "delay": 200
    },
    "lock-to-window": false
  },
  "simulation": {
    "default-CPU-frequency": 4,
    "zero-memory": true,
    "pipelined": false
  },
  "editor": {
    "font-family": "Monaco, Menlo, 'Ubuntu Mono', Consolas, source-code-pro, monospace",
    "font-size": 20,
    "initial-file" : "code/tower-of-hanoi.s",
    "continuous-assembly" : true,
    "continuous-assembly-refresh-period": 1000,
    "scroll-speed": 0.1,
    "soft-tabs": true,
    "theme" : "ace/theme/monokai",
    "user-control-during-execution": false,
    "vim-mode": false,
    "wrap": false
  },
  "splash-screen": {
    "enabled": true,
    "delay": 750,
    "width": 676,
    "height": 235
  },
  "logger": {
  	"emphasise": true
  }
}
